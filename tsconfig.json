{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "paths": {
            "~common/*": [
                "./src/common/*"
            ],
            "~utils/*": [
                "./src/utils/*"
            ]
        },
        "sourceMap": true,
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact"
    }
}